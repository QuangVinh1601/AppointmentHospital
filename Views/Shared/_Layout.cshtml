<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - BookingCare</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/layout.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.3.0/css/all.min.css">
    @RenderSection("Styles", required: false)
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-white border-bottom fixed-top">
            <div class="container">
                <a class="navbar-brand" href="/">
                    <img src="~/images/logo.png" alt="BookingCare" height="40">
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarMain">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="/chuyen-khoa">
                                Chuyên khoa
                                <div class="sub-text">Tìm bác sĩ theo chuyên khoa</div>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="/co-so-y-te">
                                Cơ sở y tế
                                <div class="sub-text">Chọn bệnh viện phòng khám</div>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="/bac-si">
                                Bác sĩ
                                <div class="sub-text">Chọn bác sĩ giỏi</div>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="/goi-kham">
                                Gói khám
                                <div class="sub-text">Khám sức khỏe tổng quát</div>
                            </a>
                        </li>
                    </ul>
                    <div class="d-flex align-items-center justify-content-between">
                        <div class="dropdown me-3">
                            <select class="form-select form-select-sm border-primary">
                                <option value="vi">VN</option>
                                <option value="en">EN</option>
                            </select>
                        </div>
                        @if (User.Identity.IsAuthenticated)
                        {
                            <div class="dropdown">
                                <a class="nav-link dropdown-toggle text-primary" href="#" id="userDropdown" role="button" 
                                data-bs-toggle="dropdown" aria-expanded="false">
                                    Hi, @User.Identity?.Name!
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="userDropdown">
                                    <li>
                                        <a class="dropdown-item" href="/profile">
                                            <i class="bi bi-person-circle"></i> Profile
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/mySchedule">
                                            <i class="bi bi-person-circle"></i> mySchedule
                                        </a>
                                    </li>
                                    <li>
                                        <a class="dropdown-item" href="/settings">
                                            <i class="bi bi-gear"></i> Settings
                                        </a>
                                    </li>
                                    <li>
                                        <form asp-action="Logout" asp-controller="Account" method="post" class="dropdown-item m-0 p-0">
                                            <button class="btn btn-link text-danger w-100 text-start">
                                                <i class="bi bi-box-arrow-right"></i> Logout
                                            </button>
                                        </form>
                                    </li>
                                </ul>
                            </div>
                        }
                    </div>


                </div>
            </div>
        </nav>
    </header>

    <main role="main">
        @RenderBody()
    </main>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - BookingCare - <a href="/privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>