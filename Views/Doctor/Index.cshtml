<link rel="stylesheet" href="~/css/doctor-calendar.css" asp-append-version="true" />
<div class="container">
        <header class="page-header">
            <h1 class="page-title">QUẢN LÝ LỊCH HẸN KHÁM BỆNH CỦA BÁC SĨ</h1>
        </header>

        <section class="filter-section">
            <div class="filter-row">
                <div class="filter-item">
                    <label for="doctor-name">Bác sĩ</label>
                    <input type="text" id="doctor-name" class="filter-input" value="HA QUOC HUNG" readonly>
                </div>
                <div class="filter-item">
                    <label for="appointment-date">Chọn ngày</label>
                    <input type="date" id="appointment-date" class="filter-input">
                </div>
            </div>

            <div class="status-filters">
                <div class="status-radio">
                    <input type="radio" id="new-appointments" name="status" checked>
                    <label for="new-appointments">Lịch hẹn mới</label>
                </div>
                <div class="status-radio">
                    <input type="radio" id="completed-appointments" name="status">
                    <label for="completed-appointments">Đã khám xong</label>
                </div>
                <div class="status-radio">
                    <input type="radio" id="canceled-appointments" name="status">
                    <label for="canceled-appointments">Đã hủy</label>
                </div>
            </div>
        </section>

        <table class="appointment-table">
            <thead class="table-header">
                <tr>
                    <th>STT</th>
                    <th>Thời gian</th>
                    <th>Họ và tên</th>
                    <th>Năm sinh</th>
                    <th>Giới tính</th>
                    <th>Địa chỉ</th>
                    <th>Lý do khám</th>
                    <th>Xác nhận</th>
                </tr>
            </thead>
            <tbody>
                <tr class="table-row">
                    <td class="table-cell">1</td>
                    <td class="table-cell">8:00 - 9:00</td>
                    <td class="table-cell">Nguyễn Đình Thắng</td>
                    <td class="table-cell">2001</td>
                    <td class="table-cell">Nam</td>
                    <td class="table-cell">Hà Nội</td>
                    <td class="table-cell">Đau đầu</td>
                    <td class="table-cell">
                        <div class="action-buttons">
                            <button class="btn btn-confirm">Xác nhận</button>
                            <button class="btn btn-cancel">Hủy</button>
                        </div>
                    </td>
                </tr>
                <!-- More rows can be added here -->
            </tbody>
        </table>
    </div>