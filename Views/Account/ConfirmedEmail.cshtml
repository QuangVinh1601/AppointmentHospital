@model string
@{
    Layout = "_AccountLayout";
}

<div class="container-fluid d-flex justify-content-center align-items-center vh-100">
    <div class="card shadow-lg text-center" style="max-width: 500px;">
        <div class="card-body p-5">
            <div class="mb-4">
                <i class="fas fa-envelope-open-text text-success" style="font-size: 5rem;"></i>
            </div>
            <h2 class="mb-3">Confirmation Email Sent</h2>
            <p class="text-muted mb-4">
                We've sent a confirmation email to <strong>@Model</strong>.
                Please check your inbox and follow the instructions to confirm your email address.
            </p>
            <div class="row g-3">
                <div class="col-12">
                    <a asp-action="Login" class="btn btn-secondary w-100">
                        <i class="fas fa-arrow-left me-2"></i>Back to Login
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
