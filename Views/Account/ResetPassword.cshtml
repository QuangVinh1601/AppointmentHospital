@using static AppointmentHospital.DTOs.Account.AccountRequest;
@model ResetPasswordRequest;
@{
    Layout = "_AccountLayout";
}

<div class="card shadow-lg">
    <div class="card-body p-5">
        <div class="text-center mb-4">
            <i class="fas fa-lock text-primary" style="font-size: 4rem;"></i>
        </div>
        <h2 class="text-center mb-4">Reset Password</h2>

        <form asp-action="ResetPassword" method="post">
            <input asp-for="@Model.Code" type="hidden" />
            <div class="form-group mb-3">
                <label asp-for="@Model.Email" class="form-label">Email</label>
                <div class="input-group">
                    <input asp-for="@Model.Email" class="form-control" value="@Model.Email" disabled type="email"
                           placeholder="Enter new password" />
                </div>

                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                <div class="password-strength-meter mt-2">
                    <div class="progress" style="height: 5px;">
                        <div class="progress-bar" role="progressbar" style="width: 0%"></div>
                    </div>
                    <small class="password-strength-text text-muted"></small>
                </div>
            </div>

            <div class="form-group mb-3">
                <label asp-for="@Model.Password" class="form-label">New Password</label>
                <div class="input-group">
                    <input asp-for="@Model.Password" class="form-control" type="password"
                           placeholder="Enter new password" />
                    <button class="btn btn-outline-secondary toggle-password" type="button">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="@Model.Password" class="text-danger"></span>
                <div class="password-strength-meter mt-2">
                    <div class="progress" style="height: 5px;">
                        <div class="progress-bar" role="progressbar" style="width: 0%"></div>
                    </div>
                    <small class="password-strength-text text-muted"></small>
                </div>
            </div>

            <div class="form-group mb-4">
                <label asp-for="@Model.ConfirmPassword" class="form-label">Confirm Password</label>
                <div class="input-group">
                    <input asp-for="@Model.ConfirmPassword" class="form-control" type="password"
                           placeholder="Confirm new password" />
                    <button class="btn btn-outline-secondary toggle-password" type="button">
                        <i class="fas fa-eye"></i>
                    </button>
                </div>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="d-grid">
                <button type="submit" class="btn btn-primary btn-lg">
                    Reset Password
                </button>
            </div>
        </form>

        <div class="text-center mt-3">
            <p class="text-muted">
                <a asp-action="Login" class="text-primary">Back to Login</a>
            </p>
        </div>
    </div>
</div>