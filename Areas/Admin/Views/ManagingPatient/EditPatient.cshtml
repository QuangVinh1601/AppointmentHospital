@using AppointmentHospital.Areas.Admin.DTOs.AdminDashBoard;
@model ManagingPatientResponse;
<div class="container">
    <div class="row">
        <div class="col-md-5 me-5 d-flex align-items-center">
            <img src="~/images//hospital.png" />
        </div>
        <div class="col-md-5 ms-5">
            <div class="form-container">
                <h2 class="form-title">Edit Patient</h2>
                <form asp-action="EditPatient" method="post" class="patient-form">
                    <div class="validation-summary-errors">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Full Name</label>
                        <input asp-for="@Model.FullName" class="form-control" type="text" />
                        <span asp-validation-for="@Model.FullName" class="field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Email Address</label>
                        <input asp-for="@Model.EmailAddress" class="form-control" type="text" />
                        <span asp-validation-for="@Model.EmailAddress" class="field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Phone Number</label>
                        <input asp-for="@Model.PhoneNumber" class="form-control" type="text" />
                        <span asp-validation-for="@Model.PhoneNumber" class="field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Address</label>
                        <input asp-for="@Model.Address" class="form-control" type="text" />
                        <span asp-validation-for="@Model.Address" class="field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Date of Birth</label>
                        <input asp-for="@Model.DateOfBirth" class="form-control" type="date" />
                        <span asp-validation-for="@Model.DateOfBirth" class="field-validation-error"></span>
                    </div>
                    <button type="submit" class="btn">
                        Submit
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/create.css" />
}

