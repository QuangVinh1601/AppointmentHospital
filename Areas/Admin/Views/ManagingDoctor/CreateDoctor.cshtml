@using AppointmentHospital.Areas.Admin.DTOs.ManagingDoctor
@model ManagingDoctorRequest;
@{
    var specializationList = ViewData["SelectSpecialization"] as List<SelectListItem>;
}
<div class="container">
    <div class="row">
        <div class="col-md-5 me-5 d-flex align-items-center">
            <img src="~/images//hospital.png" />
        </div>
        <div class="col-md-5 ms-5">
            <div class="form-container">
                <h2 class="form-title">Create New Doctor</h2>
                <form asp-action="CreateDoctor" method="post" class="patient-form">
                    <div class="validation-summary-errors">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Full Name</label>
                        <input asp-for="@Model.FullName" class="form-control" type="text" />
                        <span asp-validation-for="@Model.FullName" class="field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Email Address</label>
                        <input asp-for="@Model.EmailAddress" class="form-control" type="text" />
                        <span asp-validation-for="@Model.EmailAddress" class="field-validation-error"></span>
                    </div>
                   

                    <div class="form-group">
                        <label class="form-label">Phone Number</label>
                        <input asp-for="@Model.PhoneNumber" class="form-control" type="text" />
                        <span asp-validation-for="@Model.PhoneNumber" class="field-validation-error"></span>
                    </div>
                    <div>
                        <label class="form-label">Specialization</label>
                        <select asp-for="@Model.Specializaiton">
                            <option value="" disabled selected>Choose specialization</option>
                            @foreach(var specialization in specializationList)
                            {
                                <option value="@specialization.Value">@specialization.Text</option>
                            }
                        </select>

                    </div>
                    <div class="form-group">
                        <label class="form-label">Experience Year </label>
                        <input asp-for="@Model.ExperienceYear" class="form-control" type="number" />
                        <span asp-validation-for="@Model.ExperienceYear" class="field-validation-error"></span>
                    </div>
                    <button type="submit" class="btn">
                        Create
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

@section Styles {
    <link rel="stylesheet" href="~/css/create.css" />
}

